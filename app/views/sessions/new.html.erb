<div class="container">
  <h1 class="page-header">Login</h1>

  <%= form_tag '/login' do %>
    <div class="form-group">
      <div>
        Email:
      </div>
      <div>
        <%= text_field_tag :email %>
      </div>
    </div>
    <div class="form-group">
      Password:
    </div>
    <div>
      <%= password_field_tag :password %>
    </div>
    <div class="form-group">
      <div>
        <%= submit_tag "Submit" %>
      </div>
    </div>
  <% end %>
</div>